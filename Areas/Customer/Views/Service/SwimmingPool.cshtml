@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewData["Title"] = "Swimming Pool";
}

<!-- Hero Banner -->
<div class="position-relative overflow-hidden">
    <img src="~/images/SwimmingPool/mainPool.jpg" alt="Swimming Pool Banner" class="img-fluid w-100">
    <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
        <h1 class="display-3 fw-bold text-shadow">Swimming Pool</h1>
        <p class="lead">Dive Into Luxury and Relaxation</p>
    </div>
</div>

<!-- Introduction Section -->
<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h2 class="mb-4">Your Aquatic Paradise</h2>
            <p class="lead text-muted">
                Discover our stunning infinity pool featuring crystal-clear waters, comfortable loungers,
                and breathtaking views. Whether you're looking for an invigorating morning swim,
                a refreshing afternoon dip, or a relaxing evening by the water, our pool facilities
                offer the perfect escape. Open daily from 6:00 AM to 10:00 PM.
            </p>
        </div>
    </div>
</section>

<!-- Pool Features -->
<section class="bg-light py-5">
    <div class="container">
        <h3 class="text-center mb-5">Pool Amenities</h3>
        <div class="row g-4">
            <div class="col-md-3 col-6 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-droplet-fill fs-1 text-primary"></i>
                </div>
                <h6>25m Heated Pool</h6>
            </div>
            <div class="col-md-3 col-6 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-sun-fill fs-1 text-warning"></i>
                </div>
                <h6>Sun Loungers</h6>
            </div>
            <div class="col-md-3 col-6 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-heart-pulse-fill fs-1 text-danger"></i>
                </div>
                <h6>Lifeguard On Duty</h6>
            </div>
            <div class="col-md-3 col-6 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-cup-straw fs-1 text-info"></i>
                </div>
                <h6>Poolside Bar</h6>
            </div>
        </div>
    </div>
</section>

<!-- Pool Pass Options -->
<section class="container py-5">
    <h3 class="text-center mb-5">Pool Access Options</h3>
    <div class="row g-4">
        <!-- Day Pass -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow pool-card">
                <div class="card-header bg-topcard text-white text-center py-4">
                    <h5 class="mb-0 fw-bold">Day Pass</h5>
                </div>
                <img src="~/images/SwimmingPool/daypass.jpg" class="card-img" alt="Day Pass">
                <div class="card-body text-center">
                    <div class="display-4 text-info fw-bold mb-2">500.000 VND</div>
                    <p class="text-muted mb-4">Per Person</p>
                    <ul class="list-unstyled mb-4">
                        <li class="mb-2">✓ All-day pool access</li>
                        <li class="mb-2">✓ Towel service included</li>
                        <li class="mb-2">✓ Sun lounger use</li>
                        <li class="mb-2">✓ Valid 6 AM - 10 PM</li>
                    </ul>
                    <a href="#" class="btn btn-pool w-100">Select</a>
                </div>
            </div>
        </div>

        <!-- Evening Swim -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow pool-card">
                <div class="card-header bg-topcard text-white text-center py-4">
                    <h5 class="mb-0 fw-bold">Evening Swim</h5>
                </div>
                <img src="~/images/SwimmingPool/evening.jpg" class="card-img" alt="Evening Swim">
                <div class="card-body text-center">
                    <div class="display-4 text-info fw-bold mb-2">300.000 VND</div>
                    <p class="text-muted mb-4">Per Person</p>
                    <ul class="list-unstyled mb-4">
                        <li class="mb-2">✓ Pool access 5 PM - 10 PM</li>
                        <li class="mb-2">✓ Towel service included</li>
                        <li class="mb-2">✓ Romantic ambiance</li>
                        <li class="mb-2">✓ LED pool lighting</li>
                    </ul>
                    <a href="#" class="btn btn-pool w-100">Select</a>
                </div>
            </div>
        </div>

        <!-- Family Combo -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow pool-card position-relative">
                <div class="position-absolute top-0 end-0 m-3 z-1">
                    <span class="badge bg-success">Best Value</span>
                </div>
                <div class="card-header bg-topcard text-white text-center py-4">
                    <h5 class="mb-0 fw-bold">Family Combo</h5>
                </div>
                <img src="~/images/SwimmingPool/familyCombo.jpg" class="card-img" alt="Family Combo">
                <div class="card-body text-center">
                    <div class="display-4 text-info fw-bold mb-2">800.000 VND</div>
                    <p class="text-muted mb-4">Up to 4 People</p>
                    <ul class="list-unstyled mb-4">
                        <li class="mb-2">✓ All-day pool access</li>
                        <li class="mb-2">✓ 2 adults + 2 children</li>
                        <li class="mb-2">✓ Towel service for all</li>
                        <li class="mb-2">✓ Pool toys included</li>
                    </ul>
                    <a href="#" class="btn btn-pool w-100">Select</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Pool Rules Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h4 class="text-center mb-4">Pool Guidelines</h4>
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li class="mb-2">🏊‍♂️ Shower before entering pool</li>
                            <li class="mb-2">👶 Children under 12 must be supervised</li>
                            <li class="mb-2">🚭 No smoking in pool area</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li class="mb-2">🍷 No glass containers allowed</li>
                            <li class="mb-2">👟 Appropriate swimwear required</li>
                            <li class="mb-2">📱 Lifeguard instructions must be followed</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="container py-5 text-center">
    <h3 class="mb-3">Ready to Make a Splash?</h3>
    <p class="text-muted mb-4">Book your pool pass today and enjoy a refreshing experience</p>
    <a href="#" class="btn btn-primary btn-lg px-5">Reserve Now</a>
</section>

<style>
    .text-shadow {
        text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
    }

    .pool-card {
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .pool-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(13, 110, 253, 0.2) !important;
        }

        .pool-card img {
            height: 200px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .pool-card:hover img {
            transform: scale(1.08);
        }

    .btn-pool {
        background-color: #E4D00A;
        color: gray;
        border: none;
        padding: 12px 30px;
        transition: all 0.3s ease;
        font-weight: 600;
    }
    .bg-topcard{
        background: #E4D00A;
    }
        .btn-pool:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.4);
            color: black;
        }

    .feature-icon {
        transition: transform 0.3s ease;
    }

        .feature-icon:hover {
            transform: scale(1.2);
        }

    .card-header {
        border: none;
    }
</style>

<!-- Bootstrap Icons CDN (thêm vào _Layout.cshtml nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">