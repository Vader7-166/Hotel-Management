    </section>

    <section class="features-section">
        <div class="container">
            <h2 class="section-title">Services & Amenities</h2>
            <p class="section-subtitle">What We Offer</p>
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-wifi"></i>
                        </div>
