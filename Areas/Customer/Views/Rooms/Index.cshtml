@using Hotel_Management.Models
@model List<RoomType>
@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewData["Title"] = "Rooms";
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js" integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y" crossorigin="anonymous"></script>
    <link href="~/css/customer/room.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-5">
        <div class="text-center mb-5">
            <h1 class="display-4 mb-4">Explore Our Room Types</h1>
            <p class="lead">
                HT Hotel offers 100 rooms and suites, featuring 9 different room types to meet diverse preferences and vacation styles.
                Each room embodies a minimalist design philosophy, creating an elegant atmosphere.
                In-room amenities are arranged neatly, simply, and conveniently, providing maximum comfort for our guests.
            </p>
            <a href="#" class="btn btn-compare mt-3">COMPARE ROOM CATEGORIES</a>
        </div>
        <div class="row room-showcase">
            @foreach (var roomType in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="/images/room/room@(roomType.RoomTypeId).jpg"
                             class="card-img-top"
                             alt="@roomType.TypeName Room Image"
                             style="height: 250px; object-fit: cover;">
                        <div class="card-body d-flex flex-column" style="background : #2F6A82">
                            <h5 class="card-title text-center fw-bold" style="color : #FFFC58">@roomType.TypeName</h5>
                            <p class="card-text text-center flex-grow-1" style="color : #FFFC58">@roomType.Description</p>
                            <div class="text-center mt-auto">
                                <a asp-controller="Rooms"
                                   asp-action="RoomTypeDetails"
                                   asp-route-id="@roomType.RoomTypeId"
                                   class="btn w-100" style="background : #FFDA39">
                                    View Rooms
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</body>
</html>