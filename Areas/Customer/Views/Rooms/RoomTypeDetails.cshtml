@using Hotel_Management.Models
@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    var roomType = ViewBag.RoomType as RoomType;
    ViewData["Title"] = $"Room {roomType.TypeName}";
}

<div class="room-type-header text-white py-5 mb-5" style="background: linear-gradient(135deg,#d4af37,#aa8a3a)">
    <div class="container">
        <h1 class="fw-bold">Room @roomType.TypeName</h1>
        <p class="lead">@roomType.Description</p>
    </div>
</div>

<div class="container mb-5">
    <h3 class="mb-4">Room List</h3>
    <div id="roomList" class="row g-4 text-center">
        <div class="text-center text-muted py-5">
            <div class="spinner-border text-warning"></div>
            <p class="mt-2">Loading rooms...</p>
        </div>
    </div>

    <nav class="mt-4">
        <ul id="pagination" class="pagination justify-content-center"></ul>
    </nav>

    <div class="text-center mt-5">
        <a asp-controller="Rooms" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Room Types
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $(document).ready(function () {
            const roomTypeId = '@ViewBag.RoomTypeId';
            let currentPage = 1;

            function loadRooms(page) {
                $.ajax({
                    url: `/Customer/Rooms/LoadRooms?id=${roomTypeId}&page=${page}`,
                    type: 'GET',
                    success: function (data) {
                        $('#roomList').html(data);
                        currentPage = page;
                        loadPagination();
                    }
                });
            }

            function loadPagination() {
                const totalPages = $('#roomList').find('#totalPages').val();
                let pagination = '';
                for (let i = 1; i <= totalPages; i++) {
                    pagination += `
                        <li class="page-item ${i == currentPage ? 'active' : ''}">
                            <a class="page-link" href="#">${i}</a>
                        </li>`;
                }
                $('#pagination').html(pagination);

                $('.page-link').click(function (e) {
                    e.preventDefault();
                    const page = parseInt($(this).text());
                    if (page !== currentPage) {
                        loadRooms(page);
                        $('html, body').animate({ scrollTop: 0 }, 400);
                    }
                });
            }

            loadRooms(1);
        });
    </script>
}
