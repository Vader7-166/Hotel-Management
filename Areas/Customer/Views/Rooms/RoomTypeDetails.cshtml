@using Hotel_Management.Models
@model List<Room>

@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    var roomType = ViewBag.RoomType as RoomType;
    ViewData["Title"] = $"Phòng {roomType.TypeName}";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .room-card {
            transition: transform 0.3s, box-shadow 0.3s;
            border: none;
            border-radius: 15px;
            overflow: hidden;
        }

            .room-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            }

        .room-status {
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: bold;
        }
        .btn-booking{
            background: linear-gradient(135deg, #d4af37 0%, #aa8a3a 100%);
        }
        .status-available {
            background-color: #28a745;
            color: white;
        }

        .status-occupied {
            background-color: #dc3545;
            color: white;
        }

        .room-image {
            height: 250px;
            object-fit: cover;
        }

        .room-type-header {
            background: linear-gradient(135deg, #d4af37 0%, #aa8a3a 100%);
            color: white;
            padding: 60px 0;
            margin-bottom: 40px;
        }

        .feature-badge {
            display: inline-block;
            padding: 5px 12px;
            background: #f8f9fa;
            border-radius: 15px;
            font-size: 0.85rem;
            margin: 3px;
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <div class="room-type-header">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/" class="text-white">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Rooms" asp-action="Index" class="text-white">Phòng</a></li>
                    <li class="breadcrumb-item active text-white">@roomType.TypeName</li>
                </ol>
            </nav>
            <h1 class="display-3 fw-bold mb-3">Phòng @roomType.TypeName</h1>
            <p class="lead mb-4">@roomType.Description</p>
            <div class="row g-3">
                <div class="col-auto">
                    <div class="feature-badge bg-white text-dark">
                        <i class="bi bi-people-fill text-primary"></i>
                        <strong>Sức chứa:</strong> @roomType.MaxOccupancy người
                    </div>
                </div>
                <div class="col-auto">
                    <div class="feature-badge bg-white text-dark">
                        <i class="bi bi-cash-coin text-success"></i>
                        <strong>Giá từ:</strong> @roomType.BasePrice.ToString("N0") VNĐ/đêm
                    </div>
                </div>
                <div class="col-auto">
                    <div class="feature-badge bg-white text-dark">
                        <i class="bi bi-door-open text-info"></i>
                        <strong>Số phòng:</strong> @Model.Count phòng
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Rooms List Section -->
    <div class="container mb-5">
        <div class="row mb-4">
            <div class="col-12">
                <h3 class="mb-3">Danh Sách Phòng Có Sẵn</h3>
                <p class="text-muted">Chọn phòng phù hợp với nhu cầu của bạn</p>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var room in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card room-card h-100 shadow-sm">
                        <div class="position-relative">
                            <img src="/images/room/room@(room.RoomTypeId).jpg"
                                 class="card-img-top room-image"
                                 alt="Phòng @room.RoomNumber">
                            <span class="room-status @(room.Status == "Available" ? "status-available" : "status-occupied")">
                                @(room.Status == "Available" ? "Còn trống" : "Đã đặt")
                            </span>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold mb-3">
                                <i class="bi bi-door-closed text-primary"></i> Phòng @room.RoomNumber
                            </h5>

                            <div class="mb-3">
                                <p class="mb-2">
                                    <i class="bi bi-building text-secondary"></i>
                                    <strong>Tầng:</strong> @room.Floor
                                </p>
                            </div>

                            <p class="card-text text-muted small flex-grow-1">@room.Note</p>

                            <div class="d-grid gap-2 mt-auto">
                                @if (room.Status == "Available")
                                {
                                    <a asp-controller="Booking"
                                       asp-action="Create"
                                       asp-route-roomId="@room.RoomId"
                                       class="btn btn-booking">
                                        <i class="bi bi-calendar-check"></i> Đặt Ngay
                                    </a>
                                    <a asp-controller="Rooms"
                                       asp-action="Details"
                                       asp-route-id="@room.RoomId"
                                       class="btn btn-outline-secondary">
                                        <i class="bi bi-info-circle"></i> Xem Chi Tiết
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-danger" disabled>
                                        <i class="bi bi-x-circle"></i> Phòng Đã Đặt
                                    </button>
                                    <a asp-controller="Rooms"
                                       asp-action="Details"
                                       asp-route-id="@room.RoomId"
                                       class="btn btn-outline-secondary">
                                        <i class="bi bi-info-circle"></i> Xem Chi Tiết
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Back Button -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a asp-controller="Rooms" asp-action="Index" class="btn btn-lg btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay Lại Danh Sách Loại Phòng
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
