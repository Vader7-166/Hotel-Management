@model Hotel_Management.Models.ViewModels.Customer.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div class="register-container d-flex justify-content-center align-items-center">
    <div class="register-card shadow-lg p-4 rounded">
        <h3 class="text-center mb-4 fw-bold text-gold">CREATE ACCOUNT</h3>
        @* HIỂN THỊ LỖI CHUNG (Tên/Email đã tồn tại) - Nếu bạn dùng ModelState.AddModelError(string.Empty, ...) *@
        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center" role="alert"></div>

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="FullName" class ="form-label text-light"></label>
                <input asp-for="FullName" class="form-control custom-input"
                       placeholder="Enter your full name" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label text-light"></label>
                <input asp-for="Username" class="form-control custom-input"
                       placeholder="Choose a username" />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label text-light"></label>
                <input asp-for="Email" class="form-control custom-input"
                       placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label text-light"></label>
                <input asp-for="Password" class="form-control custom-input"
                       placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label text-light"></label>
                <input asp-for="ConfirmPassword" class="form-control custom-input"
                       placeholder="Re-enter your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-gold w-100 mt-2">Register</button>

            <p class="text-center mt-3 mb-0 text-light">
                Already have an account?
                   <a asp-area="Customer" asp-controller="Account" asp-action="Login"
                   class="text-gold text-decoration-none fw-semibold">Login here</a>
            </p>
        </form>
    </div>
</div>
@section Scripts {
    @* Kích hoạt Client-side Validation *@
    <partial name="_ValidationScriptsPartial" />
}
@section Styles {
    <style>
        body {
            background-color: #0a2342;
            font-family: "Segoe UI", sans-serif;
        }

        .register-container {
            min-height: 85vh;
        }

        .register-card {
            width: 400px;
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .text-gold {
            color: #c8a45d !important;
        }

        .btn-gold {
            background-color: #c8a45d;
            color: #fff;
            font-weight: 600;
            border: none;
        }

            .btn-gold:hover {
                background-color: #b38a47;
                color: #fff;
            }

        .custom-input {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

            .custom-input::placeholder {
                color: #ccc;
            }

            .custom-input:focus {
                box-shadow: 0 0 5px #c8a45d;
                border-color: #c8a45d;
            }

        footer {
            background-color: #091a33 !important;
            color: #c8a45d !important;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .text-danger {
            /* Định dạng cho lỗi chi tiết dưới input */
            font-size: 0.85rem !important;
        }
    </style>
}
