@model Hotel_Management.Models.ViewModels.Customer.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div class="login-container d-flex justify-content-center align-items-center">
    <div class="login-card shadow-lg p-4 rounded">
        <h3 class="text-center mb-4 fw-bold text-gold">LOGIN</h3>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center" role="alert"></div>
        <form asp-area="Customer" asp-controller="Account" asp-action="Login" method="post">
            <div class="mb-3">
                @* SỬ DỤNG asp-for để liên kết Label với ViewModel *@
                <label asp-for="Username" class="form-label text-light"></label>

                @* SỬ DỤNG asp-for để liên kết Input với ViewModel (Tự động gán id, name, type) *@
                <input asp-for="Username" class="form-control custom-input"
                       placeholder="Enter your username" />

                @* THÊM DÒNG NÀY để hiển thị lỗi chi tiết (như "Username is required") *@
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                @* SỬ DỤNG asp-for cho Password *@
                <label asp-for="Password" class="form-label text-light"></label>

                @* Tag Helper tự động thêm type="password" vì bạn dùng [DataType(DataType.Password)] trong ViewModel *@
                <input asp-for="Password" class="form-control custom-input"
                       placeholder="Enter your password" />

                @* THÊM DÒNG NÀY để hiển thị lỗi chi tiết *@
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    @* SỬ DỤNG asp-for cho RememberMe *@
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                    <label asp-for="RememberMe" class="form-check-label text-light"></label>
                </div>               
            </div>

            <button type="submit" class="btn btn-gold w-100 mt-2">Login</button>
        </form>

        <p class="text-center mt-3 mb-0 text-light">
            Don’t have an account?
            <a href="/Customer/Account/Register" class="text-gold text-decoration-none fw-semibold">Register now</a>
        </p>
    </div>
</div>
@section Scripts {
    @*  DÒNG NÀY ĐỂ KÍCH HOẠT CLIENT-SIDE VALIDATION *@
    <partial name="_ValidationScriptsPartial" />
 
}
@section Styles {
    <style>
        body {
            background-color: #0a2342;
            font-family: "Segoe UI", sans-serif;
        }

        .login-container {
            min-height: 80vh;
        }

        .login-card {
            width: 400px;
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .text-gold {
            color: #c8a45d !important;
        }

        .btn-gold {
            background-color: #c8a45d;
            color: #fff;
            font-weight: 600;
            border: none;
        }

            .btn-gold:hover {
                background-color: #b38a47;
                color: #fff;
            }

        .custom-input {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

            .custom-input::placeholder {
                color: #ccc;
            }

            .custom-input:focus {
                box-shadow: 0 0 5px #c8a45d;
                border-color: #c8a45d;
            }

        .form-check-input:checked {
            background-color: #c8a45d;
            border-color: #c8a45d;
        }

        footer {
            background-color: #091a33 !important;
            color: #c8a45d !important;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        /* Định dạng chung cho div chứa cảnh báo lỗi */
        .alert-danger {
            background-color: #dc354530; /* Nền đỏ nhạt (trong suốt) */
            color: #dc3545; /* Chữ màu đỏ */
            border: 1px solid #dc3545; /* Viền đỏ */
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
        }

            /* Loại bỏ dấu chấm đầu dòng cho danh sách lỗi (ul) bên trong alert */
            .alert-danger ul {
                list-style-type: none; /* Quan trọng: Loại bỏ dấu chấm */
                padding-left: 0;
                margin-bottom: 0;
            }

            /* Định dạng cho từng lỗi (li) bên trong alert */
            .alert-danger li {
                font-weight: 500;
                font-size: 0.95rem;
            }
    </style>
}
