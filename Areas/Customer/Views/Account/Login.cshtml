@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div class="login-container d-flex justify-content-center align-items-center">
    <div class="login-card shadow-lg p-4 rounded">
        <h3 class="text-center mb-4 fw-bold text-gold">LOGIN</h3>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="Username" class="form-label text-light">Username</label>
                <input type="text" class="form-control custom-input" id="Username" name="Username"
                       placeholder="Enter your username" required />
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label text-light">Password</label>
                <input type="password" class="form-control custom-input" id="Password" name="Password"
                       placeholder="Enter your password" required />
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="RememberMe" name="RememberMe">
                    <label class="form-check-label text-light" for="RememberMe">Remember me</label>
                </div>
                <a href="#" class="text-gold small text-decoration-none">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-gold w-100 mt-2">Login</button>
        </form>

        <p class="text-center mt-3 mb-0 text-light">
            Don’t have an account?
            <a href="/Customer/Account/Register" class="text-gold text-decoration-none fw-semibold">Register now</a>
        </p>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #0a2342;
            font-family: "Segoe UI", sans-serif;
        }

        .login-container {
            min-height: 80vh;
        }

        .login-card {
            width: 400px;
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .text-gold {
            color: #c8a45d !important;
        }

        .btn-gold {
            background-color: #c8a45d;
            color: #fff;
            font-weight: 600;
            border: none;
        }

            .btn-gold:hover {
                background-color: #b38a47;
                color: #fff;
            }

        .custom-input {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

            .custom-input::placeholder {
                color: #ccc;
            }

            .custom-input:focus {
                box-shadow: 0 0 5px #c8a45d;
                border-color: #c8a45d;
            }

        .form-check-input:checked {
            background-color: #c8a45d;
            border-color: #c8a45d;
        }

        footer {
            background-color: #091a33 !important;
            color: #c8a45d !important;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
    </style>
}
