@model Hotel_Management.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <h2 class="section-title text-center mb-4">My Profile</h2>

    <div class="row justify-content-center">
        <div class="col-lg-7">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center shadow-sm">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center shadow-sm">@TempData["Error"]</div>
            }
        </div>
    </div>

    <div class="card shadow-lg profile-card mx-auto" style="max-width: 700px; border: none; border-radius: 15px;">
        <div class="card-body p-0">

            <div class="text-center p-4 p-md-5" style="background-color: #f8f9fa; border-top-left-radius: 15px; border-top-right-radius: 15px;">
                <i class="bi bi-person-circle" style="font-size: 80px; color: #c19b51;"></i>
                <h3 class="fw-bold mb-0 mt-2">@Model.FullName</h3>
                <p class="text-muted mb-0 fs-5">@ViewBag.Username</p>
            </div>

            <div class="p-4 p-md-5">
                <h5 class="fw-bold mb-4">Contact Information</h5>

                <ul class="list-group list-group-flush fs-5">

                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3">
                        <div class="me-3">
                            <strong class="d-block">Full Name</strong>
                            <span class="text-muted">@Model.FullName</span>
                        </div>
                        <i class="bi bi-person-badge text-muted fs-4"></i>
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3">
                        <div class="me-3">
                            <strong class="d-block">Email Address</strong>
                            <span class="text-muted">@Model.Email</span>
                        </div>
                        <i class="bi bi-envelope-at text-muted fs-4"></i>
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3">
                        <div class="me-3">
                            <strong class="d-block">Phone Number</strong>
                            @if (string.IsNullOrEmpty(Model.Phone))
                            {
                                <span class="text-muted fst-italic">Not provided</span>
                            }
                            else
                            {
                                <span class="text-muted">@Model.Phone</span>
                            }
                        </div>
                        <i class="bi bi-phone text-muted fs-4"></i>
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3">
                        <div class="me-3">
                            <strong class="d-block">Address</strong>
                            @if (string.IsNullOrEmpty(Model.Address))
                            {
                                <span class="text-muted fst-italic">Not provided</span>
                            }
                            else
                            {
                                <span class="text-muted">@Model.Address</span>
                            }
                        </div>
                        <i class="bi bi-geo-alt text-muted fs-4"></i>
                    </li>
                </ul>

                <div class="text-center mt-5">
                    <a asp-action="Edit" class="btn btn-gold btn-lg px-5">
                        <i class="bi bi-pencil-square me-2"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>