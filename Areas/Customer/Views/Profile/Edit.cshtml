@model Hotel_Management.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <h2 class="section-title text-center mb-4">Edit Your Profile</h2>

    <div class="row justify-content-center">
        <div class="col-lg-7">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center shadow-sm">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center shadow-sm">@TempData["Error"]</div>
            }
        </div>
    </div>

    <div class="card shadow-lg profile-card mx-auto" style="max-width: 700px; border: none; border-radius: 15px;">

        <div class="text-center p-4" style="background-color: #f8f9fa; border-top-left-radius: 15px; border-top-right-radius: 15px;">
            <i class="bi bi-person-circle" style="font-size: 80px; color: #c19b51;"></i>
            <h3 class="fw-bold mb-0 mt-2">@Model.FullName</h3>
            <p class="text-muted mb-0 fs-5">@ViewBag.Username</p>
        </div>

        <div class="card-body p-4 p-md-5">
            <form asp-area="Customer" asp-controller="Profile" asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CustomerId" />

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                    <div class="input-group">
                        <span class="input-group-text icon-fix"><i class="bi bi-person-badge"></i></span>
                        <input asp-for="FullName" class="form-control" />
                    </div>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <div class="input-group">
                        <span class="input-group-text icon-fix"><i class="bi bi-envelope-at"></i></span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold">Phone</label>
                    <div class="input-group">
                        <span class="input-group-text icon-fix"><i class="bi bi-phone"></i></span>
                        <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" />
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold">Address</label>
                    <div class="input-group">
                        <span class="input-group-text icon-fix"><i class="bi bi-geo-alt"></i></span>
                        <input asp-for="Address" class="form-control" placeholder="Enter your address" />
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="text-end mt-4 pt-3 border-top">
                    <a asp-area="Customer" asp-controller="Profile" asp-action="Index" class="btn btn-secondary btn-lg px-4 ms-2">Cancel</a>
                    <button type="submit" class="btn btn-gold btn-lg px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .input-group-text.icon-fix {
        width: 45px; 
        justify-content: center; 
    }
</style>