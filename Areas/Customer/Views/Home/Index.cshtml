@{
    ViewData["Title"] = "Hanoi Hotel";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
   
}

<!-- ===== Hero Section ===== -->
<section id="heroCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
    <div class="carousel-inner">
        <!-- Ảnh 1 -->
        <div class="carousel-item active" data-text="light">
            <img src="~/images/Home/home1.png" class="d-block w-100 hero-img" alt="Room view">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="hero-title">Hanoi Hotel</h1>
                <p class="hero-subtitle">Live Oriental Heritage</p>
                <a asp-controller="Booking" asp-action="Index" class="btn btn-gold mt-3">Book Now</a>
            </div>
        </div>

        <!-- Ảnh 2 -->
        <div class="carousel-item" data-text="dark">
            <img src="~/images/SwimmingPool/mainPool.jpg" class="d-block w-100 hero-img" alt="Suite room">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="hero-title">Elegant Comfort</h1>
                <p class="hero-subtitle">Experience Luxury & Peace</p>
                <a asp-controller="Booking" asp-action="Index" class="btn btn-gold mt-3">Book Now</a>
            </div>
        </div>

        <!-- Ảnh 3 -->
        <div class="carousel-item" data-text="light">
            <img src="~/images/Meet&Events/WeddingCelebration.jpg" class="d-block w-100 hero-img" alt="City view">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="hero-title">Cityscape Serenity</h1>
                <p class="hero-subtitle">Your Home in Hanoi</p>
                <a asp-controller="Booking" asp-action="Index" class="btn btn-gold mt-3">Book Now</a>
            </div>
        </div>
    </div>

    <!-- Nút điều hướng -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</section>


<!-- ===== Welcome Section ===== -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="fw-bold mb-3">Welcome to Hanoi Hotel</h2>
                <p>
                    Hanoi Hotel has a great heritage of being the first international hotel in Hanoi.
                    With 218 rooms and suites overlooking the scenic Giang Vo Lake, our centrally-located hotel
                    is the perfect place for business or leisure. Enjoy luxurious accommodations, modern facilities,
                    and our renowned hospitality.
                </p>
            </div>
            <div class="col-md-6">
                <img src="~/images/home/welcome.png" class="img-fluid rounded shadow" alt="Hotel view">
            </div>
        </div>
    </div>
</section>

<!-- ===== Instagram Section (Grid) ===== -->
<section class="py-5 text-center instagram-section">
    <div class="container">
        <h2 class="mb-4 fw-bold">Us on Instagram</h2>

        <div class="insta-grid">
            <!-- you can mark some items to span larger using class "span-2" -->
            <div class="insta-item span-2"><img src="~/images/Home/insta1.jpg" alt="img1" loading="lazy"></div>
            <div class="insta-item"><img src="~/images/Home/insta2.jpg" alt="img2" loading="lazy"></div>
            <div class="insta-item"><img src="~/images/Home/insta3.jpg" alt="img3" loading="lazy"></div>
            <div class="insta-item"><img src="~/images/Home/insta4.jpg" alt="img4" loading="lazy"></div>

            <div class="insta-item"><img src="~/images/Home/insta5.jpg" alt="img5" loading="lazy"></div>
            <div class="insta-item"><img src="~/images/Home/insta6.jpg" alt="img6" loading="lazy"></div>
            <div class="insta-item span-2"><img src="~/images/Home/insta7.jpg" alt="img7" loading="lazy"></div>
            <div class="insta-item"><img src="~/images/Home/insta8.jpg" alt="img8" loading="lazy"></div>
            <div class="insta-item"><img src="~/images/Home/insta9.jpg" alt="img9" loading="lazy"></div>
            <div class="insta-item"><img src="~/images/Home/home1.png" alt="img10" loading="lazy"></div>

        </div>

        <a href="https://www.instagram.com/hanoihotel/" target="_blank" class="btn btn-outline-dark mt-4">
            <i class="bi bi-instagram me-2"></i> Follow Us
        </a>
    </div>
</section>


<!-- ===== Guest Feedback Section ===== -->
<section class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="mb-5 fw-bold">Guest's Feedback</h2>

        <div id="feedbackCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="4000">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card shadow-sm border-0 p-4 feedback-card">
                                <h5>Authentic Chinese Cuisine</h5>
                                <p class="text-warning mb-2">★★★★★</p>
                                <p>"The Chinese restaurant here is absolutely amazing. The Dimsum is the best I've ever had!"</p>
                                <small class="text-muted">— Ryan, Singapore</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card shadow-sm border-0 p-4 feedback-card">
                                <h5>Helpful Staff</h5>
                                <p class="text-warning mb-2">★★★★★</p>
                                <p>"Everyone was so warm and welcoming from the moment I arrived."</p>
                                <small class="text-muted">— Joanna, USA</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card shadow-sm border-0 p-4 feedback-card">
                                <h5>Great for Business</h5>
                                <p class="text-warning mb-2">★★★★★</p>
                                <p>"Perfect place for business meetings and conferences."</p>
                                <small class="text-muted">— Huy, Vietnam</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card shadow-sm border-0 p-4 feedback-card">
                                <h5>Exceptional Hospitality</h5>
                                <p class="text-warning mb-2">★★★★★</p>
                                <p>"The staff made sure we had everything we needed. Excellent service!"</p>
                                <small class="text-muted">— Michael, UK</small>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Nút điều hướng -->
            <button class="carousel-control-prev" type="button" data-bs-target="#feedbackCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#feedbackCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>

            <!-- Dấu chấm chỉ báo -->
            <div class="carousel-indicators mt-4">
                <button type="button" data-bs-target="#feedbackCarousel" data-bs-slide-to="0" class="active" aria-current="true"></button>
                <button type="button" data-bs-target="#feedbackCarousel" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#feedbackCarousel" data-bs-slide-to="2"></button>
                <button type="button" data-bs-target="#feedbackCarousel" data-bs-slide-to="3"></button>
            </div>
        </div>
    </div>
</section>
