@model Hotel_Management.Models.Booking
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Booking Details";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Booking Details</h2>

    <div class="card p-4 shadow">
        <p><strong>Booking ID:</strong> @Model.BookingId</p>
        <p><strong>Booking Date:</strong> @Model.BookingDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Check-in Date:</strong> @Model.CheckInDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Check-out Date:</strong> @Model.CheckOutDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Status:</strong> @Model.Status</p>

        <hr />

        <h5 class="fw-bold">Room List</h5>
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Room Type</th>
                    <th>Room Number</th>
                    <th>Price/Night</th>
                    <th>Nights</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.BookingDetails)
                {
                    <tr>
                        <td>@detail.Room.RoomType.TypeName</td>
                        <td>@detail.Room.RoomNumber</td>
                        <td>@detail.UnitPrice.ToString("N0") VND</td>
                        <td>@detail.Nights</td>
                        <td>@detail.SubTotal?.ToString("N0") VND</td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.ServiceUsages != null && Model.ServiceUsages.Any())
        {
            <hr />
            <h5 class="fw-bold mt-4">Services Used</h5>
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Service Name</th>
                        <th>Unit Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Usage Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model.ServiceUsages)
                    {
                        <tr>
                            <td>@service.Service.ServiceName</td>
                            <td>@service.UnitPrice.ToString("N0") VND</td>
                            <td>@service.Quantity</td>
                            <td>@service.TotalAmount?.ToString("N0") VND</td>
                            <td>@service.UsageDate.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted mt-3">No services were selected for this booking.</p>
        }

        <div class="text-end mt-3">
            <a asp-area="Customer" asp-controller="Booking" asp-action="MyBookings" class="btn btn-secondary">Back to My Bookings</a>
        </div>
    </div>
</div>
