@model Hotel_Management.ViewModels.AdminProfileEditViewModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header">
            <h5>Edit Profile</h5>
        </div>
        <div class="card-body">
            
            <form asp-action="EditAdminProfile" method="post" id="editProfileForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Username" />
                <input type="hidden" asp-for="EmployeeId" />
                <input type="hidden" asp-for="Position" />
                <input type="hidden" asp-for="Salary" />
                <input type="hidden" asp-for="HireDate" />


                <p class="text-uppercase text-sm">Account Information</p>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Username" class="form-control" placeholder="Username" readonly />
                            <label asp-for="Username"></label>
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email"></label>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <hr class="horizontal dark">

                <p class="text-uppercase text-sm">Personal Information</p>
                <div class="row">
                    
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                            <label asp-for="FullName"></label>
                        </div>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Phone" class="form-control" placeholder="Phone" />
                            <label asp-for="Phone"></label>
                        </div>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="Address" class="form-control" placeholder="Address" />
                            <label asp-for="Address"></label>
                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <select asp-for="Gender" class="form-control">
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <label asp-for="Gender"></label>
                        </div>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="BirthDate" type="date" class="form-control" />
                            <label asp-for="BirthDate"></label>
                        </div>
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="ShowAdminProfile" class="btn btn-outline-secondary m-0 me-2">Cancel</a>
                    <button type="submit" class="btn bg-gradient-primary m-0">Save Changes</button>
                </div>
            </form>
            
        </div>
    </div>
</div>


<form id="antiForgeryForm" class="d-none">@Html.AntiForgeryToken()</form>

@section Styles {
    <link href="~/css/customer/CustomerList.css" rel="stylesheet">
    <style>
        :root {
            --custom-form-padding-left: 1rem;
        }

        .form-floating input.form-control {
            padding-left: var(--custom-form-padding-left);
        }

        .form-floating select.form-control {
            padding-left: var(--custom-form-padding-left);
        }

        .form-floating > label {
            padding-left: var(--custom-form-padding-left);
        }
    </style>
}


@section Script {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @{
        // Bật script validation (rất quan trọng)
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}