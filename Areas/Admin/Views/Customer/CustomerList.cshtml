@model IEnumerable<Hotel_Management.Models.Customer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Customer List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <!-- Card header -->
                <div class="card-header pb-0">
                    <div class="d-lg-flex">
                        <div>
                            <h5 class="mb-0">Customer List</h5>
                            <p class="text-sm mb-0">
                                Manage all customers information
                            </p>
                        </div>
                        <div class="ms-auto my-auto mt-lg-0 mt-4">
                            <div class="ms-auto my-auto">
                                <a asp-area="Admin" asp-controller="Customer" asp-action="AddNewCustomer" class="btn bg-gradient-primary btn-sm mb-0">
                                    +&nbsp; New Customer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-0">
                    <div class="px-4 pb-3">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">Search customers</label>
                                    <input type="text" class="form-control" id="searchInput">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="input-group input-group-outline">
                                    <select class="form-control" id="GenderFilter" autocomplete="off">
                                        <option value="">All Genders</option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="input-group input-group-outline">
                                    <select class="form-control" id="NationalityFilter" autocomplete="off">
                                        <option value="">All nations</option>
                                        @if (ViewBag.AllNationalities != null)
                                        {
                                            foreach (var nationality in ViewBag.AllNationalities)
                                            {
                                                <option value="@nationality">@nationality</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button class="btn bg-gradient-info w-100" id="filterButton">
                                    <i class="material-symbols-rounded">filter_list</i> Filter
                                </button>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-outline-secondary w-100" id="resetFilterButton">
                                    <i class="material-symbols-rounded">refresh</i> Reset
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="table-with-pagination">
                        <partial name="_CustomerListPartial" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Import Model -->
<div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importModalLabel">Import Customers</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group input-group-outline mb-3">
                    <input type="file" class="form-control" id="fileInput" accept=".csv,.xlsx,.xls">
                </div>
                <p class="text-xs text-secondary">Supported formats: CSV, Excel (XLSX, XLS)</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn bg-gradient-primary">Import</button>
            </div>
        </div>
    </div>
</div>
<!--Popup Modal for Customer Detail & Edit Customer-->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>
@* Thêm vào file CustomerList.cshtml *@
<form id="antiForgeryForm" class="d-none">
    @Html.AntiForgeryToken()
</form>
@section Styles{
    <link href="~/css/customer/CustomerList.css" rel="stylesheet">
}
@section Script {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/customer/CustomerList.js"></script>
}


