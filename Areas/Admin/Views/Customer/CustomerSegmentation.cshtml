                datasets: [{
                    data: [245, 1523, 389, 127],
                    backgroundColor: ['#82d616', '#17c1e8', '#fb8c00', '#ea0606']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Booking Frequency Chart
        const ctxBooking = document.getElementById('bookingFrequencyChart').getContext('2d');
        new Chart(ctxBooking, {
            type: 'bar',
