@model Hotel_Management.Models.Customer // Sửa lại Model cho đúng với Customer.cs
@{
    ViewBag.Title = "Add New Customer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex align-items-center">
                        <h5 class="mb-0">Add New Customer</h5>
                        <a asp-area="Admin" asp-controller="Customer" asp-action="CustomerList" class="btn btn-outline-primary btn-sm ms-auto">
                            <i class="material-symbols-rounded text-sm">arrow_back</i>&nbsp; Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Customer" asp-action="AddNewCustomer" method="post">

                        @* Hiển thị lỗi validation chung *@
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <p class="text-uppercase text-sm">Customer Information</p>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="input-group input-group-outline mb-4">
                                    <label asp-for="FullName" class="form-label"></label>
                                    <input asp-for="FullName" type="text" class="form-control" required>
                                </div>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group input-group-outline mb-4">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" type="email" class="form-control" required>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group input-group-outline mb-4">
                                    <label asp-for="Phone" class="form-label"></label>
                                    <input asp-for="Phone" type="tel" class="form-control">
                                </div>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-md-6">
                                <div class="input-group input-group-outline mb-4">
                                    @* <label asp-for="BirthDate" class="form-label"></label> *@
                                    <input asp-for="BirthDate" type="date" class="form-control">
                                </div>
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group input-group-outline mb-4">
                                    <select asp-for="Gender" class="form-control">
                                        <option value="" disabled selected>Select Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="horizontal dark">

                        <p class="text-uppercase text-sm">Identification & Location</p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group input-group-outline mb-4">
                                    <label asp-for="Idnumber" class="form-label">ID Number (CCCD/Passport)</label>
                                    <input asp-for="Idnumber" type="text" class="form-control">
                                </div>
                                <span asp-validation-for="Idnumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group input-group-outline mb-4">
                                    <label asp-for="Nationality" class="form-label"></label>
                                    <input asp-for="Nationality" type="text" class="form-control">
                                </div>
                                <span asp-validation-for="Nationality" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="input-group input-group-outline mb-4">
                                    <label asp-for="Address" class="form-label"></label>
                                    <input asp-for="Address" type="text" class="form-control">
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-area="Admin" asp-controller="Customer" asp-action="CustomerList" class="btn btn-light m-0 me-2">Cancel</a>
                            <button type="reset" class="btn btn-outline-secondary m-0 me-2">Reset</button>
                            <button type="submit" class="btn bg-gradient-primary m-0">Add Customer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script {
    @* File JS của bạn đã đúng, nó xử lý giao diện và không cần thay đổi *@
    <script src="~/js/customer/AddNewCustomer.js"></script>
}