@model Hotel_Management.Models.Account

@{
    Layout = null;
}

<form asp-area="Admin" asp-controller="EmployeeManagement" asp-action="Edit" method="post" id="editAccountForm">
    @Html.AntiForgeryToken()

    @* Gửi ID (Username) về server nhưng không cho phép sửa *@
    <input type="hidden" asp-for="Username" />

    <div class="modal-header">
        <h5 class="modal-title">Edit Account: <strong>@Model.Username</strong></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        <div class="container-fluid">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-12 mb-3">
                    <div class="input-group input-group-outline is-filled">
                        @* Luôn is-filled vì đây là thông tin không đổi *@
                        <label class="form-label">Username</label>
                        <input type="text" class="form-control" value="@Model.Username" readonly />
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <div class="input-group input-group-outline">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="input-group input-group-outline">
                        <select asp-for="Role" class="form-control" required>
                            <option value="Employee">Employee</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="input-group input-group-outline">
                        @{
                            // Chuyển đổi bool sang string để select có thể binding
                            string isActiveString = Model.IsActive.ToString();
                        }
                        <select asp-for="IsActive" class="form-control" required>
                            <option value="True" selected="@(isActiveString == "True")">Active</option>
                            <option value="False" selected="@(isActiveString == "False")">Inactive</option>
                        </select>
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

@* Script để kích hoạt floating label cho form vừa tải *@
<script>
    if (typeof initializeFloatingLabels === 'function') {
        initializeFloatingLabels();
    }
</script>