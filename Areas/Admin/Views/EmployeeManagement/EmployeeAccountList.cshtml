@model IEnumerable<Hotel_Management.Models.Account>
@{
    ViewData["Title"] = "Employee Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-lg-flex">
                        <div>
                            <h5 class="mb-0">Employee & Admin List</h5> 
                            <p class="text-sm mb-0">Manage employee and admin accounts.</p>
                        </div>
                        <div class="ms-auto my-auto mt-lg-0 mt-4">
                            <div class="ms-auto my-auto">
                                <a asp-area="Admin" asp-controller="EmployeeManagement" asp-action="AddNewEmployeeAccount" class="btn bg-gradient-primary btn-sm mb-0">
                                    +&nbsp;
                                    New Employee
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-0">
                    <div class="px-4 pb-3">

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="searchAccountInput" placeholder="Search by Username / Email">
                                    <label for="searchAccountInput">Search by Username / Email</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <select class="form-select" id="roleFilter" autocomplete="off">
                                        <option value="">All Roles</option> 
                                        <option value="Admin">Admin</option> 
                                        <option value="Employee">Employee</option> 
                                    </select>
                                    <label for="roleFilter">Role</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <select class="form-select" id="positionFilter" autocomplete="off">
                                        <option value="">All Positions</option> 
                                    </select>
                                    <label for="positionFilter">Position</label>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <button class="btn bg-gradient-info w-100" id="filterAccountButton">
                                    <i class="material-symbols-rounded">filter_list</i> 
                                </button>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-outline-secondary w-100" id="resetAccountButton">
                                    <i class="material-symbols-rounded">refresh</i> 
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="account-table-container">
                        <partial name="_AccountListPartial" /> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg"><div class="modal-content"></div></div>
</div>
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog"><div class="modal-content"></div></div>
</div>
<form id="antiForgeryForm" class="d-none">@Html.AntiForgeryToken()</form>

@section Styles {
    <link href="~/css/customer/CustomerList.css" rel="stylesheet">
    <style>
        :root {
            --custom-form-padding-left: 1rem;
        }

        .form-floating input.form-control {
            padding-left: var(--custom-form-padding-left);
        }

        .form-floating select.form-control {
            padding-left: var(--custom-form-padding-left);
        }

        .form-floating > label {
            padding-left: var(--custom-form-padding-left);
        }

        /* (Thêm CSS cho nhãn nổi - nếu cần) */
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-select ~ label {
            transform: scale(0.85) translateY(-0.5rem) translateX(0);
        }
    </style>
}

@section Script {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/admin/EmployeeAccountList.js" asp-append-version="true"></script>
}